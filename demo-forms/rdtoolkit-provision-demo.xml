<?xml version="1.0"?>
<h:html xmlns="http://www.w3.org/2002/xforms" xmlns:ev="http://www.w3.org/2001/xml-events" xmlns:h="http://www.w3.org/1999/xhtml" xmlns:jr="http://openrosa.org/javarosa" xmlns:orx="http://openrosa.org/xforms" xmlns:xsd="http://www.w3.org/2001/XMLSchema">
  <h:head>
    <h:title>Rapid Diagnostic Toolkit Demo</h:title>

    <model>
      <itext>
        <translation lang="en">
          <text id="/rdtoolkit_provision/inputs/contact/_id:label">
            <value>What is the patient's name?</value>
          </text>
          <text id="/rdtoolkit_provision/patient_name:label">
            <value>Patient name</value>
          </text>
          <text id="/rdtoolkit_provision/patient_id:label">
            <value>Patient ID</value>
          </text>
          <text id="/rdtoolkit_provision/rdtoolkit_session_id:label">
            <value>Session ID</value>
          </text>
          <text id="/rdtoolkit_provision/rdtoolkit_state:label">
            <value>Status</value>
          </text>
          <text id="/rdtoolkit_provision/rdtoolkit_time_started:label">
            <value>Started on</value>
          </text>
          <text id="/rdtoolkit_provision/rdtoolkit_time_resolved:label">
            <value>Results available on</value>
          </text>
        </translation>
      </itext>

      <instance>
        <rdtoolkit_provision delimiter="#" id="rdtoolkit_provision">
          <inputs>
            <source>user</source>
            <contact>
              <_id/>
              <name/>
              <patient_id/>
            </contact>
          </inputs>

          <patient_uuid tag="hidden"/>
          <patient_name/>
          <patient_id/>
          <rdtoolkit_session_id tag="hidden"/>
          <rdtoolkit_state/>
          <rdtoolkit_time_started/>
          <rdtoolkit_time_resolved/>

          <meta tag="hidden">
            <instanceID/>
          </meta>
        </rdtoolkit_provision>
      </instance>

      <bind nodeset="/rdtoolkit_provision/inputs/contact/_id" type="db:person"/>
      <bind nodeset="/rdtoolkit_provision/inputs/contact/name" type="string"/>
      <bind nodeset="/rdtoolkit_provision/inputs/contact/patient_id" type="string"/>

      <bind calculate="../inputs/contact/_id" nodeset="/rdtoolkit_provision/patient_uuid" type="string"/>
      <bind calculate="../inputs/contact/name" nodeset="/rdtoolkit_provision/patient_name" type="string"/>
      <bind calculate="../inputs/contact/patient_id" nodeset="/rdtoolkit_provision/patient_id" type="string"/>

      <bind nodeset="/rdtoolkit_provision/rdtoolkit_session_id" type="string"/>
      <bind nodeset="/rdtoolkit_provision/rdtoolkit_state" type="string"/>
      <bind nodeset="/rdtoolkit_provision/rdtoolkit_time_started" type="string"/>
      <bind nodeset="/rdtoolkit_provision/rdtoolkit_time_resolved" type="string"/>
    </model>
  </h:head>

  <h:body class="pages">
    <group appearance="field-list rdtoolkit_provision" ref="/rdtoolkit_provision">
      <group ref="/rdtoolkit_provision/inputs/contact" appearance="rdtoolkit_contact">
        <input appearance="db-object" ref="/rdtoolkit_provision/inputs/contact/_id">
          <label ref="jr:itext('/rdtoolkit_provision/inputs/contact/_id:label')"/>
        </input>
      </group>
      <input ref="/rdtoolkit_provision/rdtoolkit_session_id" appearance="rdtoolkit_session_id hidden">
        <label ref="jr:itext('/rdtoolkit_provision/rdtoolkit_session_id:label')"/>
      </input>
      <input ref="/rdtoolkit_provision/rdtoolkit_state" appearance="rdtoolkit_state hidden">
        <label ref="jr:itext('/rdtoolkit_provision/rdtoolkit_state:label')"/>
      </input>
      <input ref="/rdtoolkit_provision/rdtoolkit_time_started" appearance="rdtoolkit_time_started hidden">
        <label ref="jr:itext('/rdtoolkit_provision/rdtoolkit_time_started:label')"/>
      </input>
      <input ref="/rdtoolkit_provision/rdtoolkit_time_resolved" appearance="rdtoolkit_time_resolved hidden">
        <label ref="jr:itext('/rdtoolkit_provision/rdtoolkit_time_resolved:label')"/>
      </input>
    </group>
  </h:body>
</h:html>
