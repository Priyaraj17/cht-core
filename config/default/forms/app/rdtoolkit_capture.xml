<?xml version="1.0"?>
<h:html xmlns="http://www.w3.org/2002/xforms" xmlns:ev="http://www.w3.org/2001/xml-events" xmlns:h="http://www.w3.org/1999/xhtml" xmlns:jr="http://openrosa.org/javarosa" xmlns:orx="http://openrosa.org/xforms" xmlns:xsd="http://www.w3.org/2001/XMLSchema">
    <h:head>
        <h:title>Rapid Diagnostic Toolkit Demo</h:title>

        <model>
            <itext>
                <translation lang="en">
                    <text id="/rdtoolkit_capture/patient_uuid:label">
                        <value>Patient UUID</value>
                    </text>
                    <text id="/rdtoolkit_capture/patient_id:label">
                        <value>Patient ID: <output value="/rdtoolkit_capture/patient_id"/></value>
                    </text>
                    <text id="/rdtoolkit_capture/patient_name/value:label">
                        <value>Patient Name: <output value="/rdtoolkit_capture/patient_name"/></value>
                    </text>

                    <text id="/rdtoolkit_capture/rdtoolkit_state:label">
                        <value>Status</value>
                    </text>
                    <text id="/rdtoolkit_capture/rdtoolkit_time_started:label">
                        <value>Started on</value>
                    </text>
                    <text id="/rdtoolkit_capture/rdtoolkit_time_resolved:label">
                        <value>Results were available on</value>
                    </text>

                    <text id="/rdtoolkit_capture/rdtoolkit_session_id:label">
                        <value>Session ID</value>
                    </text>
                    <text id="/rdtoolkit_capture/rdtoolkit_results:label">
                        <value>Result codes</value>
                    </text>
                    <text id="/rdtoolkit_capture/rdtoolkit_results_description:label">
                        <value>Results</value>
                    </text>
                    <text id="/rdtoolkit_capture/rdtoolkit_time_read:label">
                        <value>Taken on</value>
                    </text>
                </translation>
            </itext>

            <instance>
                <rdtoolkit_capture delimiter="#" id="rdtoolkit_capture">
                    <patient_uuid tag="hidden"/>
                    <patient_name/>
                    <patient_id/>

                    <rdtoolkit_state/>
                    <rdtoolkit_time_started/>
                    <rdtoolkit_time_resolved tag="hidden"/>

                    <rdtoolkit_session_id tag="hidden"/>
                    <rdtoolkit_results tag="hidden"/>
                    <rdtoolkit_results_description/>
                    <rdtoolkit_time_read/>

                    <meta tag="hidden">
                        <instanceID/>
                    </meta>
                </rdtoolkit_capture>
            </instance>

            <bind nodeset="/rdtoolkit_capture/patient_uuid" type="string"/>
            <bind nodeset="/rdtoolkit_capture/patient_name" type="string" readonly="true()"/>
            <bind nodeset="/rdtoolkit_capture/patient_id" type="string" readonly="true()"/>

            <bind nodeset="/rdtoolkit_capture/rdtoolkit_state" type="string"/>
            <bind nodeset="/rdtoolkit_capture/rdtoolkit_time_started" type="string"/>
            <bind nodeset="/rdtoolkit_capture/rdtoolkit_time_resolved" type="string"/>

            <bind nodeset="/rdtoolkit_capture/rdtoolkit_session_id" type="string"/>
            <bind nodeset="/rdtoolkit_capture/rdtoolkit_results" type="string"/>
            <bind nodeset="/rdtoolkit_capture/rdtoolkit_results_description" type="string"/>
            <bind nodeset="/rdtoolkit_capture/rdtoolkit_time_read" type="string"/>
        </model>
    </h:head>

    <h:body class="pages">
        <group appearance="field-list rdtoolkit_capture" ref="/rdtoolkit_capture">
            <input ref="/rdtoolkit_capture/patient_uuid" appearance="patient_uuid hidden">
                <label ref="jr:itext('/rdtoolkit_capture/patient_uuid:label')"/>
            </input>
            <input ref="/rdtoolkit_capture/patient_name" appearance="patient_name">
                <label ref="jr:itext('/rdtoolkit_capture/patient_name/value:label')"/>
            </input>
            <input ref="/rdtoolkit_capture/patient_id" appearance="patient_id">
                <label ref="jr:itext('/rdtoolkit_capture/patient_id:label')"/>
            </input>

            <input ref="/rdtoolkit_capture/rdtoolkit_state" appearance="rdtoolkit_state hidden">
                <label ref="jr:itext('/rdtoolkit_capture/rdtoolkit_state:label')"/>
            </input>
            <input ref="/rdtoolkit_capture/rdtoolkit_time_started" appearance="rdtoolkit_time_started hidden">
                <label ref="jr:itext('/rdtoolkit_capture/rdtoolkit_time_started:label')"/>
            </input>
            <input ref="/rdtoolkit_capture/rdtoolkit_time_resolved" appearance="rdtoolkit_time_resolved hidden">
                <label ref="jr:itext('/rdtoolkit_capture/rdtoolkit_time_resolved:label')"/>
            </input>

            <input ref="/rdtoolkit_capture/rdtoolkit_session_id" appearance="rdtoolkit_session_id hidden">
                <label ref="jr:itext('/rdtoolkit_capture/rdtoolkit_session_id:label')"/>
            </input>
            <input ref="/rdtoolkit_capture/rdtoolkit_results" appearance="rdtoolkit_results hidden">
                <label ref="jr:itext('/rdtoolkit_capture/rdtoolkit_results:label')"/>
            </input>
            <input ref="/rdtoolkit_capture/rdtoolkit_results_description" appearance="rdtoolkit_results_description hidden">
                <label ref="jr:itext('/rdtoolkit_capture/rdtoolkit_results_description:label')"/>
            </input>
            <input ref="/rdtoolkit_capture/rdtoolkit_time_read" appearance="rdtoolkit_time_read hidden">
                <label ref="jr:itext('/rdtoolkit_capture/rdtoolkit_time_read:label')"/>
            </input>
        </group>
    </h:body>
</h:html>
